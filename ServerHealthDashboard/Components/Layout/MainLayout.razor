

@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="background-color:#24272f;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Slipstream
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Style="background-color:#24272f; color: white;">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Style="background-color:#17181c;">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}